<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".q_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="788dp"


        android:layout_height="1191dp"
        android:background="@drawable/quiz_bg"
        android:padding="2sp"
        android:paddingStart="2sp"
        android:paddingLeft="2sp"
        android:paddingTop="2sp"
        android:paddingEnd="2sp"
        android:paddingRight="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="708dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.263"
            app:srcCompat="@drawable/path_179" />


        <RadioButton
            android:id="@+id/notatall"
            android:layout_width="407dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level1"
            android:textColor="#4AA4E5"
            android:textSize="35dp"
            app:layout_constraintBottom_toTopOf="@+id/everyday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.137" />

        <RadioButton
            android:id="@+id/morethanhalf"
            android:layout_width="470dp"
            android:layout_height="113dp"
            android:layout_marginTop="232dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level3"
            android:textColor="#4AA4E5"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.389"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notatall" />

        <RadioButton
            android:id="@+id/several"
            android:layout_width="324dp"

            android:layout_height="88dp"
            android:layout_marginTop="152dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level2"
            android:textColor="#4AA4E5"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.267"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notatall" />

        <TextView
            android:id="@+id/q"
            android:layout_width="540dp"
            android:layout_height="149dp"
            android:fontFamily="@font/montsm"
            android:text="@string/q_1"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.472"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/everyday"
            android:layout_width="410dp"
            android:layout_height="66dp"
            android:layout_marginBottom="184dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level4"
            android:textColor="#4AA4E5"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="482dp"
        android:layout_height="122dp"

        android:background="@drawable/button_shape"

        android:fontFamily="@font/montsm"
        android:onClick="nextPage"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:backgroundTint="#4AA4E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.215" />


</androidx.constraintlayout.widget.ConstraintLayout>