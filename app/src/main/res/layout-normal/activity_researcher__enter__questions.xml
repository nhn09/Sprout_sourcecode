<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/researcher_bg"
    tools:context=".Researcher_Enter_Questions">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="191dp"
        android:layout_height="90dp"
        android:text="Researcher's Dashboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />


    <EditText
        android:id="@+id/enter_question"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:background="@drawable/button_shape_3"
        android:hint="     Enter Question"

        android:inputType="text"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:background="@drawable/button_shape_2"
        android:hint="     Enter Option 1"
        android:inputType="text"
        android:textColorHint="#4AA4E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_question"
        app:layout_constraintVertical_bias="0.091" />

    <EditText
        android:id="@+id/plain_text_input_2"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_shape_2"
        android:hint="     Enter Option 2"
        android:inputType="text"
        android:textColorHint="#4AA4E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/plain_text_input_3"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_2"
        android:hint="     Enter Option 3"
        android:inputType="text"
        android:textColorHint="#4AA4E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input_2"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:background="@drawable/button_shape"
        android:text="Confirm"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input_3"
        app:layout_constraintVertical_bias="0.868" />

    <ImageButton
        android:id="@+id/back_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/confirm"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plain_text_input_3"
        app:layout_constraintVertical_bias="0.868"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>