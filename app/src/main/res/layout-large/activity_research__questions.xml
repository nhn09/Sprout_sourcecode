<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/researcher_bg"
    tools:context=".Research_Questions">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="402dp"
        android:layout_height="209dp"
        android:text="Researcher's Dashboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="304dp"
        android:layout_height="115dp"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="#4AA4E5"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/question_1"
        android:layout_width="690dp"
        android:layout_height="0dp"
        android:textSize="50sp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question_1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/question_2"
        android:layout_width="691dp"
        android:layout_height="138dp"
        android:background="@drawable/button_shape_2"

        android:text="@string/question2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="50sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_1"
        app:layout_constraintVertical_bias="0.069" />


    <Button
        android:id="@+id/question_3"
        android:layout_width="689dp"
        android:layout_height="153dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question_3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_2" />

    <Button
        android:id="@+id/question_4"
        android:layout_width="689dp"
        android:layout_height="146dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_3"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/add_new"
        android:layout_width="434dp"
        android:layout_height="84dp"
        android:background="@drawable/button_shape"
        android:text="Add New Questions"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_4"
        app:layout_constraintVertical_bias="0.754" />

    <ImageButton
        android:id="@+id/back_2"
        android:layout_width="115dp"
        android:layout_height="102dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>