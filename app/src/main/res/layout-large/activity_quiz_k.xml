<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".q_3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="527dp"


        android:layout_height="748dp"
        android:background="@drawable/quiz_bg"
        android:padding="2sp"
        android:paddingStart="2sp"
        android:paddingLeft="2sp"
        android:paddingTop="2sp"
        android:paddingEnd="2sp"
        android:paddingRight="2sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="473dp"
            android:layout_height="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.263"
            app:srcCompat="@drawable/path_179" />


        <RadioButton
            android:id="@+id/notatall"
            android:layout_width="353dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level1"
            android:textColor="#4AA4E5"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/everyday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.182" />

        <RadioButton
            android:id="@+id/morethanhalf"
            android:layout_width="376dp"
            android:layout_height="88dp"
            android:layout_marginTop="152dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level3"
            android:textColor="#4AA4E5"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notatall" />

        <RadioButton
            android:id="@+id/everyday"
            android:layout_width="299dp"
            android:layout_height="66dp"
            android:layout_marginTop="220dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level4"
            android:textColor="#4AA4E5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.298"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.744" />

        <RadioButton
            android:id="@+id/several"
            android:layout_width="267dp"

            android:layout_height="50dp"
            android:layout_marginTop="88dp"
            android:buttonTint="#4AA4E5"
            android:fontFamily="@font/mont"
            android:onClick="onRadioButtonClicked"
            android:text="@string/level2"
            android:textColor="#4AA4E5"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.261"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notatall" />

        <TextView
            android:id="@+id/q"
            android:layout_width="391dp"
            android:layout_height="143dp"
            android:fontFamily="@font/montsm"
            android:text="@string/q_1"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.085"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="321dp"
        android:layout_height="77dp"

        android:background="@drawable/button_shape"

        android:fontFamily="@font/montsm"
        android:onClick="nextPage"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:backgroundTint="#4AA4E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.315" />


</androidx.constraintlayout.widget.ConstraintLayout>