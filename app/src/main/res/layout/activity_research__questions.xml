<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/researcher_bg"
    tools:context=".Research_Questions">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="191dp"
        android:layout_height="90dp"
        android:text="Researcher's Dashboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="185dp"
        android:layout_height="46dp"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="#4AA4E5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/question_1"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question_1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/question_2"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_1"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:id="@+id/question_3"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question_3"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_2" />

    <Button
        android:id="@+id/question_4"
        android:layout_width="333dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape_2"
        android:text="@string/question4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4AA4E5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_3"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/add_new"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:background="@drawable/button_shape"
        android:text="Add New Questions"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_4"
        app:layout_constraintVertical_bias="0.754" />

    <ImageButton
        android:id="@+id/back_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>